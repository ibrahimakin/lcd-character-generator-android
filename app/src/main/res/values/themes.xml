<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LCDCharacterGenerator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_gray</item>
        <item name="colorPrimaryVariant">@color/darker_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LCDCharacterGenerator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LCDCharacterGenerator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="textAllCaps">false</item>
    </style>
    <style name="Theme.LCDCharacterGenerator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>